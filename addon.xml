<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.konsodi" name="Konsodi" version="0.1.1" provider-name="kharts">
    <requires>
        <import addon="xbmc.python" version="2.1.0"></import>
        <import addon="script.module.pyxbmct" version="1.1.5"></import>
    </requires>
    <extension point="xbmc.python.script" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Python console for Kodi</summary>
        <description lang="en">Allows to execute arbitrary Python code and see the results inside Kodi</description>
        <disclaimer lang="en"></disclaimer>
        <language></language>
        <platform>all</platform>
        <license>GNU GPL v2</license>
        <forum></forum>
        <website>https://github.com/kharts/konsodi</website>
        <email></email>
        <source>https://github.com/kharts/konsodi</source>
    </extension>
</addon>
