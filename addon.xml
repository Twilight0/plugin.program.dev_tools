<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.konsodi" name="Konsodi" version="0.1.2" provider-name="kharts">
    <requires>
        <import addon="xbmc.python" version="2.20.0"/>
        <import addon="script.module.pyxbmct" version="1.1.5"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Interactive Python console/shell for Kodi</summary>
        <description lang="en">Allows to execute arbitrary Python code and see the results inside Kodi</description>
        <language>en</language>
        <platform>all</platform>
        <license>GNU GPL v2</license>
        <forum>http://forum.kodi.tv/showthread.php?tid=258074</forum>
        <website>https://github.com/kharts/konsodi</website>
        <source>https://github.com/kharts/konsodi</source>
    </extension>
</addon>
